@{
    ViewBag.Title = "Login";
}

<div class="jumbotron">
    <h1 style=" text-align:center">LOGIN/CREATE</h1>
    <p class="lead"></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2 style="font-size: 27px">Create Account</h2>
        <form action="Home/CreateCustomer" method="post">
            <div>
                <label for="firstName">Username:</label>
            </div>
            <div>
                <input style="margin-bottom: 5px" type="text" id="username" name="Username" required minlenght="4" maxlength="12" size="14">
            </div>
            <div>
                <label for="firstName">Password:</label>
            </div>
            <div>
                <input style="margin-bottom: 5px" type="password" id="password" name="Password" required minlenght="8" maxlength="16" size="18">
            </div>
            <div>
                <label for="firstName">First Name:</label>
            </div>
            <div>
                <input style="margin-bottom: 5px" type="text" id="firstName" name="FirstName" required minlenght="2" maxlength="12" size="14">
            </div>
            <div>
                <label for="lastName">Last Name:</label>
            </div>
            <div>
                <input style="margin-bottom: 5px" type="text" id="lastName" name="LastName" required minlenght="2" maxlength="12" size="14">
            </div>
            <div>
                <label for="socialSecurityNumber">Social Secutity Number:</label>
            </div>
            <div>
                <input style="margin-bottom: 15px" type="text" id="socialSecurityNumber" name="SocialSecurityNumber" required minlenght="10" maxlength="10" size="12">
            </div>

            <input type="submit" value="Create">
        </form>
    </div>

    <div class="col-md-4">
        <h2 style="font-size: 27px">Login</h2>
        <form action="Home/CreateBankAccount" method="get">
            <div>
                <label for="firstName">Username:</label>
            </div>
            <div>
                <input style="margin-bottom: 5px" type="text" id="username" name="Username" required minlenght="4" maxlength="12" size="14">
            </div>
            <div>
                <label for="firstName">Password:</label>
            </div>
            <div>
                <input style="margin-bottom: 15px" type="password" id="password" name="Password" required minlenght="8" maxlength="16" size="18">
            </div>

            <input type="submit" value="Login" style="margin-bottom: 100px">
        </form>
    </div>
</div>